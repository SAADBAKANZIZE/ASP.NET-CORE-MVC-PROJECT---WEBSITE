@model List<Product> 

<div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                    List of Products
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary" >
                Create new Product <i class="bi bi-plus-square"></i>
                </a>
            </div>
        </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>

        <th>
            Product Title
        </th>
        <th>
            Product Description
        </th>
        <th>
             ISBN

        </th>
        <th>
              Category
        </th>
        <th>
                    Action
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.Title))
        {
        <tr>
            <td> 
                @obj.Title
            </td>
            <td>
                @obj.Description
            </td>
            <td>
                @obj.ISBN
            </td>
            <td>
               
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                     <a asp-controller="Product" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-success mx-2">
                                <i class="bi bi-eye"></i> View
                     </a>
                            
                    <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil"></i> Edit
                    </a>
                            
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"  class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
                           
            </td>

        </tr>
        }
    </tbody>

</table>
</div>